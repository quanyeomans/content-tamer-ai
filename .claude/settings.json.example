{
    "project": {
        "name": "Content Tamer AI",
        "description": "AI-powered document organization tool",
        "language": "python"
    },
    "preferences": {
        "codeStyle": "black",
        "lineLength": 88,
        "testFramework": "pytest"
    },
    "files": {
        "include": [
            "src/**/*.py",
            "tests/**/*.py",
            "tools/**/*.py"
        ],
        "exclude": [
            "**/__pycache__/**",
            "**/*.pyc",
            "**/documents/.processing/**",
            "**/venv/**"
        ]
    },
    "instructions": {
        "codeReview": "Focus on Python best practices, type safety, and test coverage",
        "testing": "Use pytest for all tests, maintain high coverage",
        "documentation": "Update README.md when adding new features"
    }
}